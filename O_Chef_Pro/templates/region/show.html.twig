{% extends 'base.html.twig' %}

{% block title %}Region{% endblock %}

{% block body %}
    <h1>Region</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ region.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ region.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ region.description }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ region.picture }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
