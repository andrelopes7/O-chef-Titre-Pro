{% extends 'front/base.html.twig' %}

{% block title %}Recettes{% endblock %}

{% block body %}

<div class="recipe_body">
    <p class="h1" style="margin:40px;font-style: italic;color: black; font-family: 'Times New Roman', Times, serif;">Les Recettes du chef</p>

{#-----------------------------------------Search ------------------------------------------#}

    <div class="d-flex btn-lg mb-1" style="width:50em; margin:30px; padding:20px;">
          <button class="btn btn-warning" type="button" id="button-addon1" style="width: 15em;">Rechercher</button>
          <input type="text" class="form-control" id="search-user" placeholder="Faites une recherche rapide" aria-label="Example text with button addon" aria-describedby="button-addon1">
    </div>

{#-----------------------------------------Bouttons accessibilités------------------------------------------#}

      <a class="btn btn-dark btn-lg" style="padding:20px; margin:30px; font-weight:bolder;" href="{{ path('category_index') }}">Categories</a>
      <a class="btn btn-dark btn-lg" style="padding:20px; margin:30px; font-weight:bolder;" href="{{ path('country_index') }}">Pays</a>
      <a class="btn btn-dark btn-lg" style="padding:20px; margin:30px; font-weight:bolder;" href="{{ path('ingredient_index') }}">Ingrédients</a>
      <a class="btn btn-dark btn-lg" style="padding:20px; margin:30px; font-weight:bolder;" href="{{ path('recipe_new') }}">Devenir un chef</a>

{#-----------------------------------------Recipe Results display------------------------------------------#}

<div id="recipes" style="display:inline-flex">
  <p class="h2" >Recettes</p>
   {% for recipe in recipes %}
    <div class="card_display" >

          <img src="{{ vich_uploader_asset(recipe, 'pictureFile') }}" style="height:10em;width:10em">          
          <div class="card-body">

            <div class="search-data">
            
            </div>

            <h5 class="card-title">{{ recipe.name }}</h5>
            <p class="card-text">{{ recipe.introduction }}</p>
            <p class="card-text"><small class="text-muted">{{ recipe.createdAt|date("m/d/Y") }}</small></p>
            <a class="card-text" href="{{ path('recipe_show', {'id': recipe.id}) }}">Voir</a>
            
 
          </div> 

    </div> 
    {% endfor %}
</div>
</div>
{% endblock %}
