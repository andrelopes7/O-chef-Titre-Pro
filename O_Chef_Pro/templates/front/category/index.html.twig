{% extends 'front/base.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}


<h1> Liste des catégories</h1>


<br>

<div class="d-grid gap-2 col-4 mx-auto">
 <button type="button" class="btn btn-outline-dark"><a href="{{ path('category_new') }}">Créer une nouvelle catégorie</a></button>
</div>

<br>

<div class="container">
<div class="row row-cols-2 row-cols-lg-6 g-2 g-lg-2">

    {% for category in categories %}

      <div class="card" style="width: 18rem;">
        <img src="{{category.picture}}" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title">{{category.name}}</h5>
          <a href="{{ path('category_show', {id : category.id}) }}" class="btn btn-danger">Détails</a>
        </div>
      </div>

    {% endfor %}
     
   </div>
</div>

<br>
 
<a href="{{ path('homepage') }}">Back to homepage</a>

{% endblock %}
