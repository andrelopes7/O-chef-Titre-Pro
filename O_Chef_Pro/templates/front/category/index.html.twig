{% extends 'front/base.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}


<h1> Liste des catégories</h1>

<br>

<div class="container">
<div class="row row-cols-2 row-cols-lg-6 g-2 g-lg-2">

    {% for category in categories %}

      <div class="card_index" style="display:inline-flex; width: 15rem; height: 15em; align-items: center">
        <img src="{{category.picture}}" class="card-img-top" alt="category Picture">
        <div class="card-body">
          <h5 class="card-title">{{category.name}}</h5>
          <a href="{{ path('category_show', {id : category.id}) }}" class="btn btn-danger">Détails</a>
        </div>
      </div>

    {% endfor %}
     
   </div>
</div>

<br>
 
<a href="{{ path('recipe_index') }}">Retour aux Recettes</a>

{% endblock %}
