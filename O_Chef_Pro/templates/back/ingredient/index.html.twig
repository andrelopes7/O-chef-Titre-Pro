{% extends 'back/base.html.twig' %}

{% block title %}Liste des Ingrédients{% endblock %}

{% block body %}


<h1> Liste des Ingrédients</h1>


<br>

<div class="d-grid gap-2 col-4 mx-auto">
 <button type="button" class="btn btn-outline-dark"><a href="{{ path('admin_ingredient_new') }}">Créer un nouvel Ingrédient </a></button>
</div>

<br>

<div class="container">
<div class="row row-cols-2 row-cols-lg-6 g-2 g-lg-2">

    {% for ingredient in ingredients %}
  <div class="btn btn-outline-dark"><li class="list-group-item"><a href="{{ path('admin_ingredient_show', {id : ingredient.id}) }}">{{ ingredient.name }}</a></li></div>
    {% endfor %}
     
   </div>
</div>

<br>
 
<a href="{{ path('homepage') }}">Back to homepage</a>

{% endblock %}
