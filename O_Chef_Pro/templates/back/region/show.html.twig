{% extends 'back/base.html.twig' %}



{% block body %}
    {% block title %}<h1>{{ region.name }}</h1>{% endblock %}

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ region.id }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ region.picture }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ region.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ region.description }}</td>
            </tr>
            <tr>
                <th>Pays</th>
                <td>{% for country in region.countries %}
                <div class="btn btn-outline-dark"><li class="list-group-item"><a href="{{ path('admin_country_show', {id : country.id}) }}">{{ country.name }}</a></li></div>
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ region.createdAt ? region.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ region.updatedAt ? region.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_region_index') }}">back to list</a>

    <a href="{{ path('admin_region_edit', {'id': region.id}) }}">edit</a>

    {{ include('back/region/_delete_form.html.twig') }}
{% endblock %}
