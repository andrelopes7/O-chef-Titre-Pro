{% extends 'back/base.html.twig' %}

{% block title %}Type{% endblock %}

{% block body %}
    <h1>{{ type.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ type.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ type.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ type.description }}</td>
            </tr>
            <tr>
                <th>Ingr√©dients</th>
                <td>{% for ingredients in type.ingredients %}
                        <a href="{{ path('admin_ingredient_show', {id : ingredients.id}) }}">{{ ingredients.name }}</a>
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ type.createdAt ? type.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ type.updatedAt ? type.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ type.picture }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_type_index') }}">back to list</a>

    <a href="{{ path('admin_type_edit', {'id': type.id}) }}">edit</a>

    {{ include('back/type/_delete_form.html.twig') }}
{% endblock %}
