{% extends 'back/base.html.twig' %}



{% block body %}
   {% block title %}<h1>{{ country.name }}</h1>{% endblock %}

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ country.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ country.name }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ country.picture }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ country.description }}</td>
            </tr>
            <tr>
                <th>Recettes tag</th>
                {% for recipe in country.recipes %}
                <td><a href="{{ path('admin_recipe_show', {id : recipe.id }) }}">{{ recipe.name }}</a></td>
                {% endfor %}
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ country.createdAt ? country.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ country.updatedAt ? country.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_country_index') }}">back to list</a>

    <a href="{{ path('admin_country_edit', {'id': country.id}) }}">edit</a>

    {{ include('back/country/_delete_form.html.twig') }}
{% endblock %}
