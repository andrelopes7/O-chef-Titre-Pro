{% extends 'back/base.html.twig' %}

{% block title %}Liste des Articles{% endblock %}

{% block body %}


<h1> Liste des Articles</h1>


<br>

<div class="d-grid gap-2 col-4 mx-auto">
 <button type="button" class="btn btn-outline-dark"><a href="{{ path('admin_blog_new') }}">Créer un nouvel Article</a></button>
</div>

<br>

<div class="container">
<div class="row row-cols-2 row-cols-lg-6 g-2 g-lg-2">

    {% for blog in blogs %}

    <div class="card" style="width: 18rem;">
      <img src="{{ vich_uploader_asset(blog, 'mediaFile') }}" style="height:10em;width:17em" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title">{{blog.title}}</h5>
          <a href="{{ path('admin_blog_show', {id : blog.id}) }}" class="btn btn-danger">Détails</a>
        </div>
      </div>

    {% endfor %}
     
   </div>
</div>

<br>
 
<a href="{{ path('homepage') }}">Back to homepage</a>

{% endblock %}
