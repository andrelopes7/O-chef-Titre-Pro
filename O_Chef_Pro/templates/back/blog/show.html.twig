{% extends 'back/base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    <h1>{{ blog.title }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blog.id }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ blog.content }}</td>
            </tr>
            <tr>
                <th>Media</th>
                <td>
                <img src="{{ vich_uploader_asset(blog, 'mediaFile') }}" style="height:10em;width:17em">
                </td>
            </tr>
            <tr>
                <th>Recettes tag</th>
                {% for recipe in blog.recipes %}
                <td><a href="{{ path('admin_recipe_show', {id : recipe.id }) }}">{{ recipe.name }}</a></td>
                {% endfor %}
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ blog.createdAt ? blog.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ blog.updatedAt ? blog.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_blog_index') }}">back to list</a>

    <a href="{{ path('admin_blog_edit', {'id': blog.id}) }}">edit</a>

    {{ include('back/blog/_delete_form.html.twig') }}
{% endblock %}
